<div id="currency_index">

    <h3>Currenct Excahnge Rate</h3>
    <hr/>

    <!-- Start of CUrrency Picker section -->
    <div class="row" id="currency_input">
        <div class="col-lg-3 col-md-4 col-xs-12">From
            <select id="currency-from">
                <option value="USD">USD</option>
            </select>
        </div>
        <div class="col-lg-1 col-md-1 col-xs-12">
            <i class="fa fa-arrow-right" aria-hidden="true"></i>
        </div>

        <div class="col-lg-3 col-md-4 col-xs-12">
            To
            <select id="currency-to">
                <option value="allCurrency">All Currency</option>
                <% Object.keys(data).forEach( key => { %>
                    <option value="<%= key%>">
                        <%=key%>
                    </option>
                    <% });%>
            </select>
        </div>
    </div>
    <!-- End of CUrrency Picker section -->
    <br/>
    <!-- Start of Date Picker section -->
    <div class="row">
        <div class="col-lg-3 col-md-3 col-xs-12">
            <div class="input-group input date" data-provide="datepicker">
                Date 
                <input id="currency-date" type="text" class="form-control" data-date-format="yyyy-dd-mm">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2 col-xs-12" style="margin-top: 5px;">
            <input id="currency-ask" type="button" class="btn-xs btn-info" value="Search" />
        </div>
    </div>
    <!-- End of Date Picker section -->
    <hr/>
    <!-- Result Display section -->
    <div id="currency_result"> </div>

</div>